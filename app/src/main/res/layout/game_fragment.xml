<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="gameViewModel"
            type="com.example.s205350lykkehjulet.GameViewModel" />
        <variable
            name="maxNoOfWords"
            type="int" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="645dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            tools:context=".GameFragment">


            <TextView
                android:id="@+id/Catagory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:text="CATAGORY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/GuessButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/WordToBeGuessed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:text="@{gameViewModel.shownWordToBeGuessed}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Catagory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Catagory" />


            <ImageView
                android:id="@+id/LuckyWheel"
                android:layout_width="354dp"
                android:layout_height="346dp"
                android:layout_marginVertical="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/lucky_wheel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/WordToBeGuessed" />

            <TextView
                android:id="@+id/WheelResult"
                android:layout_width="52dp"
                android:layout_height="19dp"
                android:text="800"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/LuckyWheel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/LuckyWheel"
                app:layout_constraintTop_toTopOf="@+id/LuckyWheel"
                app:layout_constraintVertical_bias="0.495" />

            <TextView
                android:id="@+id/GameQuote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:text="GUESS A LETTER!"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/WordToBeGuessed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LuckyWheel" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/LetterInput"
                android:layout_width="74dp"
                android:layout_height="48dp"
                android:layout_marginVertical="10dp"
                android:hint="letter"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/GameQuote" />

            <Button
                android:id="@+id/GuessButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:text="Guess"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/LuckyWheel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LetterInput" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>